<h1 class="d-flex justify-content-center">New Game</h1>

<div class="d-flex justify-content-center mt-5">
  <% @array.each do |letter| %>
    <div class="bg-primary text-white px-4 py-3 m-2">
      <%= letter %>
    </div>
  <% end %>
</div>

<form action="/score" method="POST" data-turbo="false" class="mt-4">
  <%= hidden_field_tag :letters, @array.join(' ') %>
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <div class="row justify-content-center mt-5">
     <div class="col-6">
       <div class="input-group">
         <input type="text" name="word" class="form-control" placeholder="Type your word">
         <button class="btn btn-primary" type="submit">Play</button>
       </div>
     </div>
   </div>
 </form>
